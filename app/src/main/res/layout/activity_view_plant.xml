<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary"
    tools:context=".ViewPlantActivity">

    <LinearLayout
        android:id="@+id/top_Panel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_Panel"
        app:layout_constraintBottom_toTopOf="@+id/bottom_Panel">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/top_Panel"
            app:layout_constraintBottom_toTopOf="@+id/bottom_Panel">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/top_Panel"
                app:layout_constraintBottom_toTopOf="@+id/bottom_Panel"
                android:adjustViewBounds="true">

                <ImageView
                    android:id="@+id/product_Image"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintDimensionRatio="1:1" />

                <GridLayout
                    android:id="@+id/grid_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="-10dp"

                    android:rowCount="2"
                    android:columnCount="3"
                    android:layout_below="@id/product_Image">

                    <ImageView
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/stock_icon"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_columnWeight="1"
                        />

                    <ImageView
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/sell_icon"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_columnWeight="1"
                        />

                    <ImageView
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/withered_icon"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_columnWeight="1"
                        />

                    <TextView
                        android:layout_height="30dp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:text="88"
                        android:textColor="@color/purple_primary"
                        android:layout_marginBottom="10dp"
                        android:layout_columnWeight="1"
                        />

                    <TextView
                        android:layout_height="30dp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:text="88"
                        android:textColor="@color/tertiary"
                        android:layout_marginBottom="10dp"
                        android:layout_columnWeight="1"
                        />

                    <TextView
                        android:layout_height="30dp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:text="88"
                        android:textColor="@color/red_primary"
                        android:layout_marginBottom="10dp"
                        android:layout_columnWeight="1"
                        />

                </GridLayout>

                <View
                    android:id="@+id/horizontal_Rule"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/gray"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/grid_Layout"
                    />

                <TextView
                    android:id="@+id/sci_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontal_Rule"
                    android:text="Aloe Barbadensis Miller"
                    android:textSize="39sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:id="@+id/cv_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sci_Name"
                    android:text="P.V. 108 'Super Blue'"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    />

                <TextView
                    android:id="@+id/description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_Name"
                    android:text="Description:"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary"
                    />

                <TextView
                    android:id="@+id/description_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_title"
                    android:justificationMode="inter_word"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="     Aloe barbadensis miller belongs to Asphodelaceae (Liliaceae) family, and is a shrubby or arborescent, perennial, xerophytic, succulent, pea- green color plant. It grows mainly in the dry regions of Africa, Asia, Europe and America. This PV108 hybrid features blue leaves with a powdery finish. 'Super Blue' has a very clean look and a must in every aloe collection. The PV in its cultivar name stands for Pijaya Vachajitpan, a famous Thai hybridizer who created this hybrid. "
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_Panel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shadow"
        android:elevation="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:id="@+id/deal_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Deal"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/secondary"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/primary"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>