<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlantMate"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Immersive"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".ViewPlantActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".HomeActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".SellPlantActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".PropagatePlantActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".StockUpPlantActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".DisposePlantActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".AddPlantActivity"
            android:theme="@style/Immersive"
            android:exported="false" />

        <activity
            android:name=".ScanQrActivity"
            android:theme="@style/Immersive"
            android:exported="false"/>
    </application>

</manifest>